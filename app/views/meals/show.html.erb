<div class="totale">
  <div class="global">
    <div class= "half-one">

      <div class="meal-picture">
        <% if @meal.photo.attached? %>
        <%= cl_image_tag @meal.photo.key, height: 300, width: 400, crop: :fill %>
        <% end %>
      </div>

      <div class="cooker">
      <%= cl_image_tag user_avatar(@meal.user, 350), height: 70, width: 70, crop: :fill, id: "avatar" %>
        <p>Your meal will be cooked by <%= @meal.user.username.capitalize %></p>
      </div>

    </div>

    <div class= "half-two">
      <h1><%= @meal.name.capitalize %></h1>
      <p><%= @meal.description.capitalize %></p>
      <p>Category: <%= @meal.category.capitalize %></p>
      <p><svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" width="16px" height="16px" viewBox="0 0 16 16"><g transform="translate(0, 0)"><line x1="14.5" y1="0.5" x2="14.5" y2="15.5" fill="none" stroke="#ef2d56" stroke-linecap="round" stroke-linejoin="round" data-color="color-2"></line> <path d="M14.5,10.5h-4v-6a4,4,0,0,1,4-4h0" fill="none" stroke="#ef2d56" stroke-linecap="round" stroke-linejoin="round" data-color="color-2"></path> <line x1="4.5" y1="8.5" x2="4.5" y2="15.5" fill="none" stroke="#ef2d56" stroke-linecap="round" stroke-linejoin="round"></line> <path d="M7.5.5v5a3,3,0,0,1-3,3h0a3,3,0,0,1-3-3V.5" fill="none" stroke="#ef2d56" stroke-linecap="round" stroke-linejoin="round"></path> <line x1="4.5" y1="0.5" x2="4.5" y2="5.5" fill="none" stroke="#ef2d56" stroke-linecap="round" stroke-linejoin="round"></line></g></svg> <%= @meal.quantity %> part(s)</p>
      <div class="loc-price">
        <h4><svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" width="16px" height="16px" viewBox="0 0 16 16"><g transform="translate(0, 0)"><path d="M13.5,6c0,4.5-5.5,9.5-5.5,9.5S2.5,10.5,2.5,6a5.5,5.5,0,0,1,11,0Z" fill="none" stroke="#ef2d56" stroke-linecap="round" stroke-linejoin="round"></path> <circle cx="8" cy="6" r="2.5" fill="none" stroke="#ef2d56" stroke-linecap="round" stroke-linejoin="round" data-color="color-2"></circle></g></svg> <%= @meal.location.capitalize %></h4>
        <h3><%= @meal.price %> <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" width="16px" height="16px" viewBox="0 0 16 16"><g transform="translate(0, 0)"><path fill="#ef2d56" d="M12.8,12.2C11.9,12.7,11,13,10,13c-2,0-3.8-1.2-4.6-3H9c0.6,0,1-0.4,1-1S9.6,8,9,8H5c0-0.3,0-0.7,0.1-1H9 c0.6,0,1-0.4,1-1S9.6,5,9,5H6c0.9-1.2,2.3-2,4-2c1,0,1.9,0.3,2.8,0.8c0.5,0.3,1.1,0.2,1.4-0.3c0.3-0.5,0.2-1.1-0.3-1.4 C12.7,1.4,11.4,1,10,1C7.2,1,4.8,2.6,3.7,5H2C1.4,5,1,5.4,1,6s0.4,1,1,1h1.1C3,7.3,3,7.7,3,8H2C1.4,8,1,8.4,1,9s0.4,1,1,1h1.3 c0.9,2.9,3.5,5,6.7,5c1.4,0,2.7-0.4,3.9-1.2c0.5-0.3,0.6-0.9,0.3-1.4C13.8,12,13.2,11.9,12.8,12.2z"></path></g></svg></h3>
      </div>

      <div class="btns">

          <%= link_to request.referer do %>
          <p class="btn-ghost">Back to the list</p>
          <% end %>


          <%= form_with url: meal_orders_path(@meal), local: true, method: :post do |form| %>
          <p><%= form.submit "Order this meal", class: "btn-ghost", name:"Order this meal" %></p>
          <% end %>


      </div>

    </div>
  </div>
</div>
