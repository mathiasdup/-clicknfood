<div class="container-form">
<h1>Add a new meal</h1>
<%= simple_form_for @meal do |f| %>
  <%= f.error_notification %>
  <%= f.input :name, input_html: { class: 'my-input', placeholder: "Name"}, label: false %>
  <%= f.input :description, input_html: { class: 'my-input', placeholder: "Description"}, label: false %>
  <%= f.input :category, collection: ["french", "chinese", "mexican", "japanese", "italian", "indian", "lebanese", "viet"], input_html: { class: 'my-input', id: 'dropdown-color'}, label: false, include_blank: "CatÃ©gorie" %>
  <%= f.input :location, input_html: { class: 'my-input', placeholder: "Location"}, label: false %>
  <%= f.input :price, :input_html => { type: "number" }, input_html: { class: 'my-input', placeholder: "Price"}, label: false %>
  <%= f.input :quantity, collection: 1..10, input_html: { class: 'my-input'}, label: false, include_blank: "Quantity" %>
  <%= f.input :photo, as: :file, label: false %>

  <%= f.button :submit, class: "btn btn-block send-button tx-tfm" %>
        <% end %>
</div>
